<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.HienThiCauHoiFragment">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline38"
            android:layout_width="11dp"
            android:layout_height="63dp"
            android:orientation="horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="419dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lblCauHoi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Câu hỏi"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textViewSoCauHoi"
                android:layout_width="114dp"
                android:layout_height="93dp"
                android:layout_marginTop="8dp"
                android:background="#00e6e6"
                android:gravity="center"
                android:text="1"
                android:textAlignment="center"
                android:textSize="36sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/text_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ai là người tạo ra thuyết vũ trụ"
                android:textSize="14sp"/>
            <Button
                android:id="@+id/btn_DapAn_A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#B8C0C0"
                android:backgroundTintMode="multiply"
                android:gravity="clip_vertical"
                android:text="A."
                />

            <Button
                android:id="@+id/btn_DapAn_B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#B8C0C0"
                android:gravity="clip_vertical"
                android:text="B."
                />

            <Button
                android:id="@+id/btn_DapAn_C"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#B8C0C0"
                android:gravity="clip_vertical"
                android:text="C."
                />

            <Button
                android:id="@+id/btn_DapAn_D"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#B8C0C0"
                android:gravity="clip_vertical"
                android:text="D."
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageClock"
                    android:layout_width="50dp"
                    android:layout_height="51dp"
                    android:src="@mipmap/ic_clock1_foreground" />

                <TextView
                    android:id="@+id/textCountTime"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:text="0" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButtonGoiDienNguoiThan"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:src="@mipmap/ic_telephone_foreground" />

            <ImageButton
                android:id="@+id/imageButtonKhanGiaTroGiup"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:src="@mipmap/ic_community_foreground" />

            <ImageButton
                android:id="@+id/imageButton50percent"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:src="@mipmap/ic_50percent_foreground" />

            <ImageButton
                android:id="@+id/imageButtonDoiCauHoi"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_marginEnd="20dp"
                android:src="@mipmap/ic_reset_foreground" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>